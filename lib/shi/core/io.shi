(module shi:core:io)

(def *in* *stdin*)
(def *out* *stdout*)

(defn read-line ()
  (loop (line "")
    (def c (read))
    (cond
      (eq c "\n") line
      else (recur (str line c)))))

(defn newline ()
  (write "\n"))

(defn pr (v)
  (write (pr-str v)))

(defn prn (v)
  (pr v)
  (newline))

(defn print (v)
  (set *print-readably* false)
  (write (pr-str v)))

(defn println (v)
  (print v)
  (newline))
